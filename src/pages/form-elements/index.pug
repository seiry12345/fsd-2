extends ../../layouts/ui-kit.pug

include ../../Сomponents/Input/Input.pug
include ../../Сomponents/Dropdown/Dropdown.pug
include ../../Сomponents/Dropdown-date/Dropdown-date
include ../../Сomponents/Checkbox/Checkbox.pug
include ../../Сomponents/Radio/Radio.pug
include ../../Сomponents/Toggle/Toggle.pug
include ../../Сomponents/Like-btn/Like-btn.pug
include ../../Сomponents/Rate-btn/Rate-btn.pug
include ../../Сomponents/Range/Range.pug
include ../../Сomponents/Button/Button.pug
include ../../Сomponents/Pagination/Pagination.pug

block content
  - const inputEmailAttrs = {"inputType": "email", "inputName": "email", "inputID": "email", "inputClass": "", "inputPlaceholder": "Email", "inputValue": false, "labelTitle": "Text Field", "labelTitleRight": "Default"};
  - const dropdownGuests = {"class": "", "id": "dropdown-guests", "placeholder": "Сколько гостей?", "labelTitle": "Dropdown", "labelTitleRight": "Default", "dropdownBtns": "true"};
  - const dropdownGuestsItems = [{"text": "Взрослые", "class": ""}, {"text": "Дети", "class": ""}, {"text": "Младенцы", "class": "separate"}];

  - const masked = {"id": "date-masked", "formItemClass": "", "inputPlaceholder": "ДД.ММ.ГГГГ", "labelTitle": "masked text field", "labelTitleRight": "Default"};
  - const dateRange = {"id1": "date1", "id2": "date2", "formItemClass": "", "labelTitle1": "date Dropdown", "labelTitle2": "date Dropdown"};
  - const dateFiltered = {"id": "date-filtered", "formItemClass": "form__item--width266", "inputPlaceholder": "ДД.ММ.ГГГГ", "labelTitle": "filter date dropdown"};

  - const inputSubscribe = {"inputType": "email", "inputName": "email", "inputID": "subscribe", "inputClass": '', "inputPlaceholder": "Email", "inputValue": false, "labelTitle": "subscription text field", "inputWrap": "subscribe input-wrap--width266"};

  - const checkbox = {"name": "checkbox1", "id": "checkbox1", "class": '', "labelClass": "", "value": false, "labelTitle": "Можно курить"};

  - const radioMale = {"name": "gender", "id": "radio1", "class": '', "labelClass": "", "value": 'male', "labelTitle": "Мужчина"};
  - const radioFemale = {"name": "gender", "id": "radio2", "class": '', "labelClass": "", "value": 'female', "labelTitle": "Женщина"};
  - const toggle = {"name": "toggle", "id": "toggle1", "class": 'toggle', "labelClass": "", "value": false, "labelTitle": "Получать спецпредложения"};

  - const likeBtn = {"name": "like-btn", "id": "like-btn", "class": '', "labelClass": "", "value": false, "labelTitle": "2"};

  - const rangeSlider = {"name": "range", "class": '', "labelClass": "", "labelTitle": "Range Slider", "minPrice": "0", "maxPrice": "20000"};



  .wrapper
    .block-wrap
      .block-item
        .form-item.form-item__email
          +input(inputEmailAttrs)
        +dropdown(dropdownGuests, dropdownGuestsItems)

        +dropdownDate(masked)
        +dropdownDate(dateRange, true, false)
        +dropdownDate(dateFiltered, false, true)

        .form-item.form-item__subscribe.form-item--width266
          +input(inputSubscribe)



      .block-item
        .block-item__wrap
          h3 checkbox buttons
          +checkbox(checkbox)

        .block-item__wrap
          h3 radio buttons
          .block-item__radio
            +radio(radioMale)
            +radio(radioFemale)

        .block-item__wrap
          h3 toggle
          .block-item__toggle
            +toggle(toggle)

        .block-item__wrap
          h3 Like btn
          .block-item__toggle
            +likeBtn(likeBtn)

        .block-item__wrap
          h3 rate button
          .block-item__rate
            +rateBtn(5, 4)

      .block-item
        .block-item__wrap
          +range(rangeSlider)
        .block-item__wrap
          h3 Buttons
          +button('', 'Click me')
        .block-item__wrap
          +button('btn btn--transparent', 'Click me')
        .block-item__wrap
          a(class= "block-item__link", href= "#") Click me
        .block-item__wrap
          +button('btn btn--w320', 'перейти к оплате')
        .block-item__wrap
          h3 Pagination
          +pagination(4, 1, 4, 14, arrows)

    .block-wrap
      .block-item
        .block-item__wrap

      .block-item
        .block-item__wrap

      .block-item
        .block-item__wrap