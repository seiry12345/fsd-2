block content
  main
    .wrapper
      .block-wrap
        .block-item
          +input(inputEmailAttrs)
          +dropdown(dropdownGuests, dropdownGuestsItems)
          +dropdownDate(masked)
          +dropdownDate(dateRange, true, false)
          +dropdownDate(dateFiltered, false, true)
          +input(inputSubscribe)

        .block-item.block-item__center.block-item--w260
          .block-item--mb40
            h4 checkbox buttons
            +checkbox(checkbox)
            +checkbox(checkbox2)
            +checkbox(checkbox3)
          .block-item--mb40
            h4 radio buttons
            .block-item__radio
              +radio(radioMale, 'checked')
              +radio(radioFemale)
          .block-item--mb40
            h4 toggle
            .block-item__toggle
              +toggle(toggle)
          .block-item--mb40
            h4 Like button
            .block-item__toggle
              +likeBtn(2)
          .block-item--mb40
            h4 rate button
            .block-item__rate
              +rateBtn(5, 4)

        .block-item
          .block-item--mb40
            +range(rangeSlider)
          .block-item--mb30
            h4 Buttons
            +button('', 'button', 'Click me')
          .block-item--mb30
            +button('btn--transparent', 'button', 'Click me')
          .block-item--mb30
            a(class= "block-item__link", href= "#") Click me
          .block-item--mb40
            +button('btn--arrow btn--w320', 'button', 'перейти к оплате')
          .block-item--mb40
            h4 Pagination
            +pagination(4, 1, 4, 14, arrows)

      .block-wrap
        .block-item
          +dropdown(dropdownFurniture, dropdownFurnitureItems)
        .block-item.block-item__center
          +dropdown(dropdownGuests, dropdownGuestsItems)
        .block-item
          +dropdown(dropdownGuests2, dropdownGuestsItems)

      .block-wrap
        .block-item.block-item--mb40
          +checkboxExpandable('expandable checkbox list', 'form-item--w266', checkboxExpItems)

        .block-item.block-item__center.block-item--mb40
          h4 rich Checkbox Buttons
          +checkbox(checkboxRich, true)
          +checkbox(checkboxRich2, true)
        .block-item.block-item--mb40
          h4 bullet list
          +bulletList("", bulletItems)

      .block-wrap
        .block-item.block-item--w280
          +advantages(advantagesItems)
        .block-item.block-item--2col
          +review(formReview)