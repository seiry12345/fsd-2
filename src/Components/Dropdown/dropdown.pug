mixin dropdown(attrs, items, calendar)
  if attrs
    label(for= attrs.id)
      span.label-left= attrs.labelTitle
      if attrs.labelTitleRight
        span.label-right= attrs.labelTitleRight
    input(type= attrs.type, class=`dropdown ${attrs.class}`, id= attrs.id, placeholder=attrs.placeholder, disabled)
    .dropdown-items
      if calendar
        input.dropdown-item.dropdown-item__calendar
      else
        each item in items
          .dropdown-item
            span.dropdown-item__text.h3= item.text
            .dropdown-controls
              .dropdown-controls__btn.dropdown-controls__btn-minus
                <i class="fas fa-minus"></i>
              .dropdown-controls__value.h3 0
              .dropdown-controls__btn.dropdown-controls__btn-plus
                <i class="fas fa-plus"></i>
  else
    input(type="button", class=`dropdown ${attrs.class}`, id= attrs.id, placeholder=attrs.placeholder, option="disabled")
    .dropdown-items
