mixin userBlock(selector, btnsText, signed)
  div(class=`user ${selector}`)
    if (signed.length > 0)
      a(href="/personal", class="user__name")
        | Cosmin Negoita
    else
      a(href="/login", class="user__mobile")
        | <i class="material-icons">account_circle</i>

      +button("btn--transparent btn__call-auth", "button", btnsText.login)
      +button("btn__call-registration", "button", btnsText.registration)