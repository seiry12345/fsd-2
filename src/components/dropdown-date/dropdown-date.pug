mixin dropdownDate(data, range, filter)
  div(class="form-item form-item__date " + data.customSelector)
    if (range)
      .dropdown-date__wrap
        .dropdown-date__item.dropdown-date__item-range
          label(for= data.id, class= 'label-date')
            span.label-left= data.labelTitle1
          span(class="input__wrap")
            input(type="text", class="dropdown-date__input dropdown-date__start", id= data.id1, placeholder="ДД.ММ.ГГГГ")

        .dropdown-date__item.dropdown-date__item-range
          label(for= data.id, class= 'label-date')
            span.label-left= data.labelTitle2
          span(class="input__wrap")
            input(type="text", class="dropdown-date__input dropdown-date__end", id= data.id2, placeholder="ДД.ММ.ГГГГ")

    else if (filter)
      label(for= data.id, class= 'label-date')
        span.label-left= data.labelTitle
        if data.labelTitleRight
          span.label-right= data.labelTitleRight
      .dropdown-date__item.dropdown-date__item-filter
        span(class="input__wrap")
          input(type="text", class="dropdown-date__input datepicker-here", id= data.id, placeholder="ДД МММ - ДД МММ")

    else
      label(for= data.id, class= 'label-date')
        span.label-left= data.labelTitle
        if data.labelTitleRight
          span.label-right= data.labelTitleRight
      .dropdown-date__item
        span(class="input__wrap")
          input(type="text", class="dropdown-date__input datepicker-here", id= data.id, placeholder="ДД.ММ.ГГГГ")
